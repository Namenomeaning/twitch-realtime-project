# Kafka Configuration
KAFKA_BROKER=localhost:9092
TOPIC=game_streams
USERS_TOPIC=twitch_users
SCHEMA_REGISTRY_URL=http://localhost:8081

# Twitch API Configuration
# Get these from https://dev.twitch.tv/console/apps
APP_ID=your_twitch_app_id_here
APP_SECRET=your_twitch_app_secret_here

# Game ID to monitor (21779 = League of Legends, 32982 = Grand Theft Auto V)
GAME_ID=21779

# ClickHouse Configuration
CLICKHOUSE_HOST=clickhouse
CLICKHOUSE_PORT=9000
CLICKHOUSE_HTTP_PORT=8123
CLICKHOUSE_DATABASE=twitch_data
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=

# Grafana Configuration (optional)
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# Docker Host IP (for Kafka external access)
DOCKER_HOST_IP=127.0.0.1
